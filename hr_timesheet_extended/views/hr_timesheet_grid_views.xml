<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Crear una acción para timesheets que necesitan validación -->
    <record id="action_timesheet_to_validate" model="ir.actions.act_window">
        <field name="name">To Validate</field>
        <field name="res_model">account.analytic.line</field>
        <field name="view_mode">grid,tree,form</field>
        <field name="domain">[
            ('project_id', '!=', False),
            '|',
            '&amp;', ('state', '=', 'submitted'), ('manager_id', '=', uid),
            '|',
            '&amp;', ('state', '=', 'manager_approved'), ('department_head_id', '=', uid),
            '&amp;', ('state', '=', 'department_approved'), ('hr_manager_id', '=', uid)
        ]</field>
        <field name="context">{
            'grid_anchor': context_today().strftime('%Y-%m-%d'),
            'grid_range': 'week',
            'default_employee_id': [('user_id', '=', uid)],
            'show_approval_buttons': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No timesheet to validate
            </p>
            <p>
                Timesheets pending your approval will appear here.
            </p>
        </field>
    </record>

    <!-- Menú para validar timesheets -->
    <menuitem id="menu_timesheet_to_validate"
        name="To Validate"
        parent="hr_timesheet.menu_hr_time_tracking"
        action="action_timesheet_to_validate"
        sequence="70"
        groups="hr.group_hr_user,hr.group_hr_manager"/>
</odoo>